        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="M"
            android:id="@+id/buttonM"
            android:onClick="OnClickButtonM"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

    </LinearLayout>


</RelativeLayout>
