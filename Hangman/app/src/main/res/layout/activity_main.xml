            android:layout_height="50dp"
            android:text="H"
            android:id="@+id/buttonH"
            android:onClick="OnClickButtonH"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="J"
            android:id="@+id/buttonJ"
            android:onClick="OnClickButtonJ"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="K"
            android:id="@+id/buttonK"
            android:onClick="OnClickButtonK"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="L"
            android:id="@+id/buttonL"
            android:onClick="OnClickButtonL"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="Z"
            android:id="@+id/buttonZ"
            android:onClick="OnClickButtonZ"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="X"
            android:id="@+id/buttonX"
            android:onClick="OnClickButtonX"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

