<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/state1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/GuessingWord"
        android:id="@+id/wordResult"
        android:layout_alignParentTop="true"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/encouregement"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="Q"
            android:id="@+id/buttonQ"
            android:onClick="OnClickButtonQ"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="W"
            android:id="@+id/buttonW"
            android:onClick="OnClickButtonW"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="E"
            android:id="@+id/buttonE"
            android:onClick="OnClickButtonE"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="R"
            android:id="@+id/buttonR"
            android:onClick="OnClickButtonR"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="T"
            android:id="@+id/buttonT"
            android:onClick="OnClickButtonT"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="Y"
            android:id="@+id/buttonY"
            android:onClick="OnClickButtonY"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="U"
            android:id="@+id/buttonU"
            android:onClick="OnClickButtonU"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="I"
            android:id="@+id/buttonI"
            android:onClick="OnClickButtonI"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="O"
            android:id="@+id/buttonO"
            android:onClick="OnClickButtonO"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="P"
            android:id="@+id/buttonP"
            android:onClick="OnClickButtonP"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="A"
            android:id="@+id/buttonA"
            android:onClick="OnClickButtonA"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="S"
            android:id="@+id/buttonS"
            android:onClick="OnClickButtonS"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="D"
            android:id="@+id/buttonD"
            android:onClick="OnClickButtonD"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="F"
            android:id="@+id/buttonF"
            android:onClick="OnClickButtonF"
            android:paddingLeft="0dp"
